# norootforbuild
# Maintainer: Roman Neuhauser <neuhauser+git-mailz@sigpipe.cz>

%define _upstreamver __VERSION__

Name:           git-mailz
Version:        __VERSION__
Release:        0
License:        MIT
Summary:        Send a collection of patches as emails
Url:            https://github.com/roman-neuhauser/%{name}
Group:          Productivity/Networking/Email/Utilities
Source:         %{name}-%{_upstreamver}.tar.gz
BuildRequires:  filesystem
BuildArch:      noarch
BuildRoot:      %_tmppath/%name-%version-build
Requires:       %_sbindir/sendmail
Requires:       zsh
BuildRequires:  zsh
BuildRequires:  python3-cram

%define gitmailz_make  make PREFIX=%{_prefix}
%description
git-mailz(1) feeds patches given on the command line to sendmail(1).

%prep
%setup -qn %{name}-%{_upstreamver}

%build
%gitmailz_make most

%check
%gitmailz_make check CRAMCMD=cram3

%install
%gitmailz_make install DESTDIR=%{buildroot}

%files
%defattr(-,root,root)
%{_bindir}/git-mailz
%{_mandir}/man1/git-mailz.1.gz

%changelog
